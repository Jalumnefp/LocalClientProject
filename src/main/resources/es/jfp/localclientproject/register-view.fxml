<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.textfield.*?>

<?import org.controlsfx.glyphfont.Glyph?>
<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.jfp.localclientproject.controllers.RegisterController">
    <children>
        <Button fx:id="goBackButton">
            <graphic>
                <Glyph fontFamily="FontAwesome" icon="ARROW_LEFT" />
            </graphic>
        </Button>
        <CustomTextField fx:id="usernameCustomTextField" promptText="Nombre de usuario" />
        <CustomPasswordField fx:id="passwordCustomTextField" promptText="Contraseña" />
        <CustomPasswordField fx:id="repeatPasswordCustomTextField" promptText="Repetir contraseña" />
        <Button fx:id="registerButton" maxWidth="Infinity" mnemonicParsing="false" text="Registrar" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
        <ProgressBar fx:id="registerProgressBar" prefWidth="200.0" visible="false" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
    </padding>
</VBox>
