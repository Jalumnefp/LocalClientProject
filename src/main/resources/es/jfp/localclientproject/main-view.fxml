                                    <Glyph fontFamily="FontAwesome" icon="USER" fontSize="24" />
                                </graphic>
                            </Button>
                            <HBox prefHeight="0.0" prefWidth="10.0" />
                            <Button fx:id="createFolderActionIcon">
                                <graphic>
                                    <Glyph fontFamily="FontAwesome" icon="FOLDER" fontSize="24" />
                                </graphic>
                            </Button>
                            <HBox prefHeight="0.0" prefWidth="10.0" />
