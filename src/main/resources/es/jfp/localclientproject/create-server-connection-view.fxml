            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="ALWAYS" />
            </rowConstraints>
            <children>
                <Button fx:id="closeButton" maxWidth="Infinity" mnemonicParsing="false" text="Cancelar" GridPane.columnIndex="0" GridPane.halignment="CENTER">
                    </Button>
                <Button fx:id="acceptButton" maxWidth="Infinity" mnemonicParsing="false" text="AÃ±adir" GridPane.columnIndex="1" GridPane.halignment="CENTER"></Button>
