        <CheckBox fx:id="saveServerCheckBox" mnemonicParsing="false" text="Guardar Servidor" />
        <GridPane prefWidth="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
